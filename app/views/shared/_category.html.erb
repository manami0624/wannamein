<% if local_assigns[:dialog].present? %>
  <% dialog = local_assigns[:dialog] %>
  <div class="post-preview">
    <div class="post.html">
      <div class="post.html__top">
        <h5 class="post-title"><%= link_to dialog.language, dialog_path(dialog.id), method: :get %></h2>
        <h6 class="post-subtitle"><%= link_to dialog.translation, dialog_path(dialog.id), method: :get %></h3>
        <% if dialog.file.present? %>
          <%= audio_tag dialog.file_url, controls: true, style: "width: 100%; height: 20px; margin-top: 10px;" %>
        <% end %>
      </div>
      <div class="post-html__bottom">
        <p><%= dialog.category.name %> | <%= dialog.created_at.strftime("%Yå¹´%mæœˆ%dæ—¥ %H:%M") %> | by <%= dialog.user.name %></p>
      </div>
    </div>
  </div>
  <!-- Divider-->
  <hr class="my-4" />
<% end %>