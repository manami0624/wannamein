<div class="dialog__wrapper">

  <div class="dialog__manage">
    <% if user_signed_in? && current_user.id == @dialog.user_id %>
      <%= link_to '編集する', edit_dialog_path(@dialog.id), method: :get, class: :dialog__btn %>
      <%= link_to '削除する', dialog_path(@dialog.id), method: :delete, class: :dialog__btn, data: { confirm: '本当に削除しますか？' } %>
    <% end %>
  </div>

  <p class="dialog__hedding"><h1><%= @dialog.language %></h1></p>
  <div class="translation"><%= @dialog.translation %></div>

  <div class="dialog__image">
    <td>
      <% if @dialog.file.present? %>
        <%= audio_tag @dialog.file_url, :controls => true %>
      <% end %>
    </td>
  </div>

  <div class="dialog__detail">
    <%= h(@dialog.memo).gsub(/\n|\r|\r\n/, "<br>").html_safe %>
  </div>

  <div class="dialog__category">
    <% @dialog.tags.each do |tag| %>
    <span>
    <svg version="1.1" id="_x32_" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 512 512" style="width: 20px; height: 20px; opacity: 1;" xml:space="preserve">
