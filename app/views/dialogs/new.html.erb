<div class="contents row">
  <div class="form__wrapper">
    <h3>投稿する</h3>
    <%= form_with(model: @dialog, local: true) do |form| %>
      <div class="form-item">
        <%= form.label :category, "カテゴリー" %><br />
        <%= form.select :category, options_for_select(['カテゴリー1', 'カテゴリー2', 'カテゴリー3']) %>
      </div>
      <div class="form-item">
        <%= form.label :language, "한국어" %><br />
        <%= form.text_field :language %>
      </div>
      <div class="form-item">
        <%= form.label :translation, "日本語" %><br />
        <%= form.text_field :translation %>
      </div>
      <div class="form-item">
        <%= form.label :memo, "memo" %><br />
        <%= form.text_area :memo, rows: "10" %>
      </div>
      <%= form.submit "SEND", class: "form__btn" %>
    <% end %>
  </div>
</div>