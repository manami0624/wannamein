<!-- Page Header-->
<%= render "shared/header"%>
<header class="show__header"></header>

<div class='form-wrapper' id='account-page'>
  <div class='user-form-title'>
    <div class='user-form-login'>
      Create Account
      <%# <h5>新規作成</h5> %>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="user-form-item">
           <%= f.text_field :name, required: true, placeholder: "Name" %>
        </div>

        <div class="user-form-item">
          <%= f.email_field :email, required: true, placeholder: "Email Address" %>
        </div>

        <div class="user-form-item">
          <%= f.password_field :password, required: true, placeholder: "Password(英数字6文字以上)", autocomplete: "off" %>
        </div>

        <div class="user-form-item">
          <%= f.password_field :password, required: true, placeholder: "Password Confirmation", autocomplete: "off" %>
        </div>

        <div class='actions'>
      <div class="user-button-panel">
        <%= f.submit "Log In", class: "user-button", title: "Sign In" %>
      </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- Footer-->
<%= render "shared/footer"%>